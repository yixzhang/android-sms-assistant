<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhangyi.sms.assistant2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />
    
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:theme="@android:style/Theme.Light" >
        <activity
            android:name=".SMSAssistant2Activity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SMSSearchActivity"
            android:label="@string/sms_search" />
        <activity
            android:name=".SMSSearchResultActivity"
            android:label="@string/search_result"/>
        <activity 
            android:name=".BestFriendsActivity"
            android:label="@string/best_friends" />
        <activity
            android:name=".SpamSMSActivity"
            android:label="@string/spam_message_cleaner" />
    </application>

</manifest>